#!/usr/bin/env groovy

pipeline {
    agent any;

    stages {
        stage ('Build Image') {
            steps {
                sh 'cd scripts/dockerfiles/archlinux; docker build -t gensim-ubuntu-18.04 . '
            }
        }

        stage ('Build') {
            steps {
                sh '''
                cd scripts/dockerfiles && sh test-dockerfile.sh ubuntu-18.04/
                '''
            }
        }
    }
}
